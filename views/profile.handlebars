<div class="row">
  <div class="col-auto">
    <h2 id="profile">Welcome, {{user.dataValues.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 id="profile">Create a New Army:</h3>

    {{!-- Add new army --}}
    <form class="form new-army-form" id="profile">
      <div class="">
        <label for="army-name">Army Name:</label>
        <input class="form-input" type="text" id="army-name" name="army-name" />
      </div>
      {{!-- Description of army --}}
  </div>
  <div class="" id="profile">
    <label for="army-desc">Description:</label>
    <textarea class="form-input" id="army-desc" name="army-desc"></textarea>
  </div>
  <div class="" id="profile">
    <button type="submit" class="btn btn-primary">Create</button>
  </div>
  </form>
</div>

<div class="pl-5 w-auto">
  <h1 class="text-4xl font-bold underline">{{user.dataValues.name}}'s Army List</h1>
  {{#each user.dataValues.armies}}

      <h4 class="font-bold text-3xl"><a href="/api/army/newarmy/{{this.dataValues.id}}">{{this.dataValues.name}}</a></h4>

  <li class="text-red-600 font-bold text-2xl"><strong>Army Name:</strong> {{ this.dataValues.name }}</li>
  <li class="text-red-600 font-bold text-2xl"><strong>Description:</strong> {{ this.dataValues.description }}</li>
  <br> </br>
    {{/each}}
</div>

<script src="./js/profile.js"></script>

